extends base.pug

block script 
    script
        function chooseForm(radioName) {
            -var radios = document.getElementsByName(radioName);
            -var length = radios.length;
            -for (var i = 0 ; i < length; i++) {
                document.getElementById('form_' + radios[i].value).style.display = 'none';
                if (radios[i].checked)
                    document.getElementById('form_' + radios[i].value).style.display = 'block';
            }
        }

block content
    if errorMessage
        span=errorMessage

    form(method="POST")

        input( type="radio", required, id="short", name="formType", value="1", onclick="chooseForm(this.name)", checked="checked")
        label( for="short") 단답형
        input( type="radio", required, id="multiple", name="formType", value="2", onclick="chooseForm(this.name)")
        label( for="multiple") 객관식
