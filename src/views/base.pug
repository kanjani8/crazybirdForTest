doctype html
html(lang="ko")
    head
        title #{pageTitle} | #{siteName}
        link(rel="stylesheet" href="https://unpkg.com/mvp.css")
        block script
    body
        header 
            h1=pageTitle
            nav
                ul 
                    li
                        a(href="/") 메인 페이지
                    if loggedIn
                        li 
                            a(href="/user/edit") 프로필 설정
                        li 
                            a(href="/user/logout") 로그아웃
                        li
                            a(href=`/user/${loggedInUser.username}`) #{loggedInUser.name}의 마이페이지
                        li
                            h4 포인트: #{loggedInUser.point}
                    else
                        li
                            a(href="/enroll") 회원가입
                        li
                            a(href="/login") 로그인
        main
            block content
        include partials/footer.pug
    block scripts