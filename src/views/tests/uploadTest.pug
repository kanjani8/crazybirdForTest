extends ../base.pug
block content
    if errorMessage
        span=errorMessage
    if loggedInUser.emailCertificated
        form(method="POST").upload__testForm
            div.radioBox
                div.radioItem
                    input( type="radio", required, id="short", name="formType", value="1", checked="checked")
                    label( for="short") 단답형
                div.radioItem
                    input( type="radio", required, id="multiple", name="formType", value="2")
                    label( for="multiple")   객관식
            br
            div.radioBox
                div.radioItem
                    input( type="radio", required, id="open", name="opened", value=1, checked="checked")
                    label( for="open") 공개(+50 point)
                div.radioItem
                    input( type="radio", required, id="close", name="opened", value=0)
                    label( for="close") 비공개
            br
            div.radioBox
                div.radioItem
                    input( type="radio", required, id="middleTest", name="forWhen", value="middle", checked="checked")
                    label( for="middleTest") 중간고사용
                div.radioItem
                    input( type="radio", required, id="finalTest", name="forWhen", value="final")
                    label( for="finalTest") 기말고사용
                div.radioItem
                    input( type="radio", required, id="extraTest", name="forWhen", value="extra")
                    label( for="extraTest") 그 외
            br
            br
            div(id="form_1")
                input(placeholder="질문", type="text",id="question", name="question")
                input(placeholder="정답", type="text", id="answer",name="answer")
                input(type="submit", value="문제 등록하기").upload__testBtn

            div(id="form_2" style="display: none;")
                span.warning **틀린 선택지 3개를 전부 입력해주세요
                br
                input(placeholder="질문", type="text",id="question", name="question")
                input(placeholder="정답", type="text", id="answer",name="answer")
                br
                input(placeholder="틀린 답1",type="text", id="wrongAnswer1",name="wrongAnswer1")
                input(placeholder="틀린 답2",type="text", id="wrongAnswer2",name="wrongAnswer2")
                input(placeholder="틀린 답3", type="text", id="wrongAnswer3",name="wrongAnswer3")
                input(type="submit", value="문제 등록하기").upload__testBtn
    else
        h4 이메일을 인증해야 문제를 등록할 수 있습니다.
        a(href="/user/certificate-email") 인증하기 &rarr;
block scripts
    script(src="/static/js/chooseQuestionType.js")

        